[
    {
    "database": "postgres",
    "index": "postgres2",
    "setting": 
        {
            "analysis": {
                "analyzer": {
                    "ngram_analyzer": {
                        "filter": [
                            "lowercase"
                        ],
                        "type": "custom",
                        "tokenizer": "ngram"
                    }
                },
                "tokenizer": {
                    "ngram": {
                        "token_chars": [
                            "letter",
                            "digit",
                            "punctuation",
                            "symbol"
                        ],
                        "min_gram": "9",
                        "type": "ngram",
                        "max_gram": "10"
                    }
                }
            }
        },
    "nodes":
            {
                "table": "tasks",
                "columns": [
                    "task_id",
                    "title",
                    "description",
                    "steps",
                    "status",
                    "user_id"
                ],
                "children": [
                    {
                        "table": "users",
                        "columns": [
                            "user_id",
                            "nick",
                            "first_name",
                            "second_name",
                            "middle_name",
                            "department_id",
                            "admin"
                        ],
                        "children": [
                            {
                                "table": "departments",
                                "columns": [
                                    "department_id",
                                    "name"
                                ],
                                "relationship": {
                                    "variant": "object",
                                    "type": "one_to_many"
                                }
                            }
                        ],
                        "relationship": {
                            "variant": "object",
                            "type": "one_to_many"
                        }
                    }
                ]
            }  
    }

]